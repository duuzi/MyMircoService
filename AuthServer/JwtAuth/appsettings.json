{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConsulConfig": {
        "ConsulAddress": "http://127.0.0.1:8500", //Consul服务注册地址
        "ServiceName": "JwtAuth", //当前服务名称，可以多个实例共享
        "ServiceUriHost": "http://localhost", //当前服务地址
        "ServiceUriPort": "65002", //当前服务地址
        "HealthCheck": "/api/auth/auth" //健康检查的地址，当前服务公布出来的一个api接口
    },
    "JwtAuthorize": {
        "Secret": "ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890",
        "Issuer": "xp",
        "Audience": "everyone",
        "PolicyName": "permission",
        "DefaultScheme": "Bearer",
        "IsHttps": false,
        "Expiration": 50000,
        "RequireExpirationTime": true
    }
}
